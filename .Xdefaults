! vim:ts=8

#define BG			#e3e0d5
#define FG			#494949

Xcursor.theme:			dmz
Xcursor.size:			48

! a muted palette for athena things like xterm, xfontsel, etc.
! created with http://ciembor.github.com/4bit
*.background:			BG
*.foreground:			FG

*.scrollbar.background:		BG
*.scrollbar.foreground:		FG
*.scrollBar.minimumThumb:	50
*.scrollbar.width:		10

*.borderColor:			BG

! a muted palette

! black
*.color0:			#393939
*.color8:			#525252

! red
*.color1:			#825b69
*.color9:			#bda0aa

! green
*.color2:			#69825b
*.color10:			#aabda0

! yellow
*.color3:			#82755b
*.color11:			#bdb3a0

! blue
*.color4:			#5b6982
*.color12:			#a0aabd

! magenta
*.color5:			#755b82
*.color13:			#b3a0bd

! cyan
*.color6:			#5b8275
*.color14:			#a0bdb3

! white
*.color7:			#cacaca
*.color15:			#ffffff

! xterm-specific settings

.xterm*faceName:		dejavu sans mono:size=11
.xterm*internalBorder:		20
! hide when i type
.xterm*pointerMode:		2
.xterm*saveLines:		20000
.xterm*scrollBar:		false
.xterm*rightScrollBar:		true
.xterm*scrollBar.width:		10
.xterm*selectToClipboard:	true
.xterm*termName:		xterm-256color
.xterm*utmpInhibit:		true
.xterm*scaleHeight:		1.05

! needed by ratpoison
.xterm*allowSendEvents:		true
! which disables allowColorOps, but empty the list of actual disabled ops
! which effectively re-enables color ops
.xterm*disallowedColorOps:

.xterm*visualBell:		false

! make alt+v/command+v paste clipboard
*.XTerm.*.VT100.translations:	#override\
    Meta <KeyPress> V: insert-selection(CLIPBOARD, PRIMARY, CUT_BUFFER0)\n\
    Super <KeyPress> V: insert-selection(CLIPBOARD, PRIMARY, CUT_BUFFER0)

! make xaw scrollbars act like normal ones
.XTerm.*.Scrollbar.translations: #override\
    <Btn1Down>: StartScroll(Continuous) MoveThumb() NotifyThumb() \n\
    <Btn2Down>: StartScroll(Forward) \n\
    <Btn3Down>: StartScroll(Backward) \n\
    <Btn1Motion>: MoveThumb() NotifyThumb() \n\
    <BtnUp>: NotifyScroll(Proportional) EndScroll()


SshAskpass*inputTimeout:	15
! enlarge fonts
SshAskpass*Dialog.font:		-adobe-helvetica-bold-r-normal-*-*-200-*-*-*-*-iso8859-1
SshAskpass*Button.font:		-adobe-helvetica-bold-r-normal-*-*-200-*-*-*-*-iso8859-1
