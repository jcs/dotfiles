#!/bin/sh

# force keyboard backlight to dim
pkill -USR1 xdimmer

# kill any active tokens
doas -L
ssh-add -D

# clear clipboard
echo -n | pbcopy

if [ `uname -s` = "OpenBSD" ]; then
	pkill -KILL -f chat@
	echo nokeepalive > ~/.config/sdorfehs/bar-control
	~/bin/music pause
	slock

elif [ `uname -s` = "Darwin" ]; then
	~/bin/mac/sleepdisplay
fi
